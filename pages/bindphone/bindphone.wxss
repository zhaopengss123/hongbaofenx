.logo{
  padding: 110rpx 0 100rpx;
}
.logo image{
  display: block;
  width: 386rpx;
  margin: 0 auto;
}

.ipt-box{
  margin: 0 75rpx;
  border: solid 1px rgb(236, 236, 236);
  border-radius: 10rpx;
  box-sizing: border-box;
  position: relative;
}
.ipt-icon{
  height: 40rpx;
  padding: 0 24rpx;
  color: #494949;
  font-size: 32rpx;
  line-height: 40rpx;
  border-right: solid 1px rgb(172, 172, 172);
  position: absolute;
  top: 34rpx;
  left: 0;
}
.ipt-phone{
  display: block;
  width: 100%;
  height: 108rpx;
  padding-left: 130rpx;
  color: #494949;
  font-size: 32rpx;
  line-height: 108rpx;
  box-sizing: border-box;
}


.ipt-code{
  height: 108rpx;
  margin: 0 24rpx;
  border-top: solid 1px rgb(236, 236, 236);
  position: relative
}
.ipt-code > input{
  width: 350rpx;
  height: 100%;
  color: #494949;
  font-size: 32rpx;
}
.btn-code{
  height: 48rpx;
  padding: 0 12rpx;
  color: #FF9700;
  font-size: 32rpx;
  line-height: 48rpx;
  border-radius: 5rpx;
  position: absolute;
  top: 30rpx;
  right: 0;
  z-index: 9;
  transition: all .15s;
  transform-origin: 50%;
  transform: none;
}
.btn-code.active{
  color: #fff;
  background: #DFDFDf;
  transform: scale(.9);
}


.ipt-submit{
  width: 600rpx;
  height: 110rpx;
  margin: 50rpx 75rpx 0;
  color: #fff !important;
  font-size: 34rpx;
  text-align: center;
  line-height: 110rpx;
  background: -webkit-gradient(linear, 0 0, right bottom, from(#FF998E), to(#FB6180));
  border-radius: 10rpx;
}
.ipt-submit::after{
  display: none;
}
.ipt-submit.active{
  background: #DFDFDf;
}
.tip{
  padding: 22rpx 75rpx 0;
  color: #B0B0B0;
  font-size: 24rpx;
}